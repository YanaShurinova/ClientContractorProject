<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.5.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="ClientContractorProject">
        <addColumn tableName="CONTRACT">
            <column name="CLIENT_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="CLIENT_ID" tableName="CONTRACT"/>
    </changeSet>
    <changeSet id="2" author="ClientContractorProject">
        <addColumn tableName="CONTRACT">
            <column name="CONTRACTOR_ID" type="UUID"/>
        </addColumn>

        <addNotNullConstraint columnName="CONTRACTOR_ID" tableName="CONTRACT"/>
    </changeSet>
    <changeSet id="3" author="ClientContractorProject">
        <createIndex indexName="IDX_CONTRACT_CLIENT_ID" tableName="CONTRACT">
            <column name="CLIENT_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CLIENT_ID" baseTableName="CONTRACT"
                                 constraintName="FK_CONTRACT_ON_CLIENT" referencedColumnNames="ID"
                                 referencedTableName="CLIENT"/>
    </changeSet>
    <changeSet id="4" author="ClientContractorProject">
        <createIndex indexName="IDX_CONTRACT_CONTRACTOR_ID" tableName="CONTRACT">
            <column name="CONTRACTOR_ID"/>
        </createIndex>

        <addForeignKeyConstraint baseColumnNames="CONTRACTOR_ID" baseTableName="CONTRACT"
                                 constraintName="FK_CONTRACT_ON_CONTRACTOR" referencedColumnNames="ID"
                                 referencedTableName="CONTRACTOR"/>
    </changeSet>
    <changeSet id="5" author="ClientContractorProject">
        <dropColumn columnName="clients_id" tableName="contract"/>

        <dropColumn columnName="contractors_id" tableName="contract"/>
    </changeSet>
    <changeSet id="6" author="ClientContractorProject">
        <dropNotNullConstraint columnDataType="varchar(255)" columnName="ADDRESS" tableName="CLIENT"/>
    </changeSet>
    <changeSet id="7" author="ClientContractorProject">
        <dropNotNullConstraint columnDataType="varchar(255)" columnName="ADDRESS" tableName="CONTRACTOR"/>
    </changeSet>
    <changeSet id="8" author="ClientContractorProject">
        <dropNotNullConstraint columnDataType="int" columnName="AMOUNT_OF_SERVICES" tableName="CONTRACT"/>
    </changeSet>
    <changeSet id="9" author="ClientContractorProject">
        <dropNotNullConstraint columnDataType="varchar(255)" columnName="EMAIL" tableName="CLIENT"/>
    </changeSet>
    <changeSet id="10" author="ClientContractorProject">
        <dropNotNullConstraint columnDataType="varchar(255)" columnName="PHONE" tableName="CLIENT"/>
    </changeSet>
</databaseChangeLog>